{
  "name": "@skiyee/workspace",
  "type": "module",
  "version": "1.1.0",
  "private": true,
  "author": {
    "name": "skiyee(sKy)",
    "email": "319619193@qq.com"
  },
  "scripts": {
    "prepare": "simple-git-hooks",
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm --filter @skiyee/* build",
    "build:docs": "pnpm --filter @skiyee/uni-ui build && pnpm --filter @skiyee/uni-example build && pnpm --filter @skiyee/docs build",
    "release": "bumpp package.json examples/uni/package.json packages/skiyee-uni-ui/package.json",
    "publish:uni-ui": "pnpm --filter @skiyee/uni-ui publishOnly"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@skiyee/eslint-config": "^0.1.0",
    "@types/node": "^22.15.17",
    "@vue/tsconfig": "^0.7.0",
    "bumpp": "^10.2.0",
    "commitizen": "^4.3.1",
    "cz-git": "^1.11.2",
    "eslint": "^9.26.0",
    "simple-git-hooks": "^2.13.0",
    "tsdown": "^0.12.9",
    "typescript": "^5.8.3",
    "vue": "catalog:"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@uni-helper/unocss-preset-uni",
      "core-js",
      "esbuild",
      "simple-git-hooks",
      "unrs-resolver",
      "vue-demi",
      "@parcel/watcher",
      "@tailwindcss/oxide",
      "better-sqlite3",
      "esbuild",
      "sharp",
      "vue-demi"
    ]
  },
  "simple-git-hooks": {
    "commit-msg": "npx commitlint --edit ${1}"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}
